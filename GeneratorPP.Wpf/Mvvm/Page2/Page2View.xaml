<UserControl
    x:Class="GeneratorPP.WPF.Mvvm.Page2.Page2View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GeneratorPP.WPF.Mvvm.Page2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <d:DesignerProperties.DataContext>
        <local:Page2ViewModel />
    </d:DesignerProperties.DataContext>

    <FlowDocumentScrollViewer>
        <FlowDocument>
            <BlockUIContainer>
                <StackPanel>
                    <TextBlock>
                        Priebeh
                    </TextBlock>
                    <Grid Margin="0,5">
                        <ProgressBar
                            x:Name="ProgressBar"
                            Maximum="100"
                            Minimum="0"
                            Value="{Binding CurrentProgress}" />
                        <TextBlock
                            Padding="0,3,0,3"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{Binding ElementName=ProgressBar, Path=Value, StringFormat={}{0:0}%}" />
                    </Grid>
                </StackPanel>
            </BlockUIContainer>
        </FlowDocument>
    </FlowDocumentScrollViewer>

</UserControl>
